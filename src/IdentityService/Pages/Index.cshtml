@page
@model IdentityService.Pages.Home.Index

<div class="landing-page">
    <!-- Hero Section -->
    <div class="hero-section bg-primary py-5 mb-5" style="width: 100vw; margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-8">
                    <h1 class="display-4 fw-bold text-white mb-3">
                        Secure Identity for Modern Blogs
                    </h1>
                    <p class="text-white mb-4" style="font-size: 1.15rem; font-weight: 300; line-height: 1.6;">
                        Power your publishing platform with enterprise-grade authentication, 
                        OAuth2, and OpenID Connect. Built for developers, loved by users.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="~/.well-known/openid-configuration" class="btn btn-light btn-lg px-4 mr-3" style="color: #0033cc; font-weight: 600;">
                            Get Started
                        </a>
                        <a href="~/diagnostics" class="btn btn-light btn-lg px-4">
                            Explore
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4 text-center">
                    <svg width="280" height="200" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" stroke="#ffffff" stroke-width="2" fill="rgba(255,255,255,0.1)"/>
                        <path d="M9 12L11 14L15 10" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mb-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Why Choose Blogsphere Identity?</h2>
            <p class="lead text-muted">Everything you need for secure, scalable user management</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" stroke="#0033cc" stroke-width="2" fill="rgba(0,51,204,0.1)"/>
                            </svg>
                        </div>
                        <h5 class="card-title text-primary fw-bold">Enterprise Security</h5>
                        <p class="card-text text-muted">
                            OAuth2, OpenID Connect, and JWT tokens with industry-standard security protocols.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 4.17157 16.1716C3.42143 16.9217 3 17.9391 3 19V21" stroke="#0033cc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                <circle cx="12" cy="7" r="4" stroke="#0033cc" stroke-width="2" fill="rgba(0,51,204,0.1)"/>
                            </svg>
                        </div>
                        <h5 class="card-title text-primary fw-bold">User Management</h5>
                        <p class="card-text text-muted">
                            Complete user lifecycle management with roles, permissions, and SSO capabilities.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="#0033cc" stroke-width="2" fill="rgba(0,51,204,0.1)"/>
                            </svg>
                        </div>
                        <h5 class="card-title text-primary fw-bold">Easy Integration</h5>
                        <p class="card-text text-muted">
                            Seamless integration with your blog platform, APIs, and third-party services.
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="#0033cc" stroke-width="2" fill="rgba(0,51,204,0.1)"/>
                                <circle cx="9" cy="9" r="2" stroke="#0033cc" stroke-width="2"/>
                                <path d="M21 15L16 10L5 21" stroke="#0033cc" stroke-width="2"/>
                            </svg>
                        </div>
                        <h5 class="card-title text-primary fw-bold">Modern UI</h5>
                        <p class="card-text text-muted">
                            Beautiful, responsive interface that works perfectly on all devices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-light py-5 mb-5 border-top border-gray-200 pt-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold text-primary">How It Works</h2>
                <p class="lead text-muted">Get started in three simple steps</p>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 80px; height: 80px;">
                            <span class="text-white fw-bold fs-2">1</span>
                        </div>
                        <h4 class="text-primary fw-bold">Connect</h4>
                        <p class="text-muted">
                            Integrate your blog or application using our simple APIs and SDKs.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 80px; height: 80px;">
                            <span class="text-white fw-bold fs-2">2</span>
                        </div>
                        <h4 class="text-primary fw-bold">Authenticate</h4>
                        <p class="text-muted">
                            Enable secure user authentication with modern protocols and flows.
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 80px; height: 80px;">
                            <span class="text-white fw-bold fs-2">3</span>
                        </div>
                        <h4 class="text-primary fw-bold">Manage</h4>
                        <p class="text-muted">
                            Control users, roles, and permissions through our intuitive dashboard.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links Section -->
    <div class="container mb-5 border-top border-gray-200 pt-5">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Quick Access</h3>
            <p class="text-muted">Essential tools and resources for developers</p>
        </div>
        
