    @if(Model.License != null)
    {
        <div class="container mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary fw-bold">License Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Serial Number:</strong> @Model.License.SerialNumber
                        </div>
                        <div class="col-md-6">
                            <strong>Expiration:</strong> @Model.License.Expiration!.Value.ToLongDateString()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
