@page
@model IdentityService.Pages.Account.TwoFactor.Index
@{
    Layout = "_SinglePageLayout";
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="login-page">
    <div class="lead">
        <p>Please enter the verification code sent to your email.</p>
    </div>

    @* <partial name="_ValidationSummary" /> *@

    <div class="row justify-content-center">
        <div class="col-md-3 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                        2FA Verification
                    </h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Code">Verification Code</label>
                            <input type="text" maxlength="6" value="@Model.Code" class="form-control" placeholder="Enter code" asp-for="Code">
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <button class="btn btn-primary" name="button" value="submit">
                            <span>Verify</span>
                        </button>
                    </form>
                </div>
            </div>

            <div class="help-links">
                <div class="help-links-section">
                    <h3>Having trouble?</h3>
                    <ul>
                        <li>
                            <a asp-page="/Account/Login/Index">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z" />
                                </svg>
                                Back to Login
                            </a>
                        </li>
                        <li>
                            <a href="mailto:support@blogsphere.com">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                Contact Support
                            </a>
                        </li>
                        @* <li>
                            <a href="#" onclick="window.location.reload()">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                                Resend Code
                            </a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/twofactor.css" />
}