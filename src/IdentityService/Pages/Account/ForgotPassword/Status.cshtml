@page
@model IdentityService.Pages.Account.ForgotPassword.Status
@{
    ViewData["Title"] = "Check Your Email";
    Layout = "_SinglePageLayout";
}

<div class="forgot-password-container">
    <!-- Left Section - Gradient Background with SVG Illustration -->
    <div class="forgot-left-section">
        <div class="gradient-overlay"></div>
        <div class="content-wrapper">
            <div class="brand-section">
                <h1 class="brand-title">Blogsphere</h1>
                <p class="brand-subtitle">Identity Service</p>
            </div>
            
            <!-- SVG Illustration -->
            <div class="illustration-container">
                <svg width="320" height="280" viewBox="0 0 320 280" fill="none" xmlns="http://www.w3.org/2000/svg" class="status-illustration">
                    <!-- Background circles -->
                    <circle cx="160" cy="140" r="120" fill="rgba(255, 255, 255, 0.1)" />
                    <circle cx="160" cy="140" r="90" fill="rgba(255, 255, 255, 0.05)" />
                    
                    <!-- Email sent animation -->
                    <g class="email-sent-group" transform="translate(110, 90)">
                        <!-- Envelope -->
                        <rect x="0" y="20" width="100" height="70" fill="rgba(255, 255, 255, 0.9)" rx="4"/>
                        <!-- Check mark -->
                        <circle cx="50" cy="55" r="20" fill="#0033cc"/>
                        <path d="M40 55L47 62L60 48" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                    </g>
                    
                    <!-- Floating elements -->
                    <circle cx="100" cy="100" r="4" fill="rgba(255, 230, 0, 0.8)" />
                    <circle cx="220" cy="120" r="3" fill="rgba(255, 230, 0, 0.6)" />
                    <circle cx="80" cy="180" r="5" fill="rgba(255, 230, 0, 0.7)" />
                    <circle cx="240" cy="180" r="4" fill="rgba(255, 230, 0, 0.5)" />
                    
                    <!-- Connection lines -->
                    <path d="M100 100L160 140L220 120" stroke="rgba(255, 255, 255, 0.3)" stroke-width="1" stroke-dasharray="3,3"/>
                    <path d="M80 180L160 140L240 180" stroke="rgba(255, 255, 255, 0.3)" stroke-width="1" stroke-dasharray="3,3"/>
                </svg>
            </div>
            
            <div class="feature-text">
                <h3>Email Sent</h3>
                <p>Check your inbox for password reset instructions.</p>
            </div>
        </div>
    </div>

    <!-- Right Section - Status Message -->
    <div class="forgot-right-section">
        <div class="status-container">
            <div class="status-content">
                <h2>Check Your Email</h2>
                <p>If your email address is registered and confirmed, you will receive password reset instructions shortly.</p>
                <div class="status-actions">
                    <a asp-page="/Account/Login/Index" class="btn-continue">
                        Return to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/forgotpassword.css" />
}